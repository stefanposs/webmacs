# Database
DATABASE_URL=postgresql+asyncpg://webmacs:webmacs@localhost:5432/webmacs

# Security - GENERATE NEW KEY: openssl rand -hex 32
SECRET_KEY=change-me-generate-with-openssl-rand-hex-32
ACCESS_TOKEN_EXPIRE_MINUTES=1440
ALGORITHM=HS256

# Backend
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Controller
WEBMACS_ENV=development
WEBMACS_SERVER_URL=http://localhost
WEBMACS_SERVER_PORT=8000
WEBMACS_ADMIN_EMAIL=admin@example.com
WEBMACS_ADMIN_PASSWORD=change-me-use-strong-password
WEBMACS_POLL_INTERVAL=0.5
WEBMACS_REQUEST_TIMEOUT=30.0
WEBMACS_RULE_EVENT_ID=
WEBMACS_REVPI_MAPPING={}

# Initial Admin User (backend seeds on first start)
INITIAL_ADMIN_EMAIL=admin@webmacs.io
INITIAL_ADMIN_USERNAME=admin
INITIAL_ADMIN_PASSWORD=change-me-use-strong-password

# Sentry (optional)
SENTRY_DSN=

# PostgreSQL (Docker)
POSTGRES_USER=webmacs
POSTGRES_PASSWORD=webmacs
POSTGRES_DB=webmacs
